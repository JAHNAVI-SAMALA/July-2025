class Solution:
    def reverse(self, x: int) -> int:
        sign = -1 if x < 0 else 1
        x_abs = abs(x)
        rev = 0
        while x_abs != 0:
            d = x_abs % 10
            rev = rev*10 + d
            x_abs //= 10
        rev *= sign
        if rev < -2 **31 or rev > 2**31 - 1:
            return 0
        return rev
